package Aula66;



public class Product {
	public String name;
	public double price;
	public int quantity;
	
	public Product () {
		
	}
	public Product (String name, double price, int quantity) {
		this.name = name;
		this.price = price;
		this.quantity = quantity;
	}
		
	public double totalVulenStock() {
		
		return this.price * quantity;
	}
	public void addProducts(int quantity) {
		this.quantity += quantity;
	}
	public void removeProducts(int quantity) {
		this.quantity -= quantity;
	}

	public String toString() {
		return name + ", " + String.format("%.2f", price) + ", " + quantity + ", " + String.format("%2.f", totalVulenStock()) ;
	}
}
